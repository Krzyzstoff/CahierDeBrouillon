<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-11">
      <h1>Optredens/feesjes</h1>
    </div>
  </div>

  <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-11">
        <%= link_to 'Optreden/feesje aanmaken', new_event_path, :class => 'btn btn-default' %>
      </div>
    </div>

  <% @events.select{|s| s.date >= Date.current}.each do |event| %>
    <br>
    <div><%= image_tag "brushstroke.png" %></div>
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-5">
        <h1><%= event.title if event.title? %></h1>
      </div>

      <div class="col-md-4">
        <h1><%= event.date.strftime('%d/%m/%Y') if event.date %></h1>
      </div>

      <div class="col-md-1">
        <%= link_to 'Verwijderen', event, method: :delete, data: { confirm: 'Zijde zeker?' }, :class => 'btn btn-default' %><br/>
        <%= link_to 'Aanpassen', edit_event_path(event), :class =>'btn btn-default' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-5">
       <h3>CahierCard: €<%= event.cahiercard.round if event.cahiercard? %></h3>
      </div>

      <div class="col-md-5">
        <h3>Kassa: €<%= event.price.round if event.price? %></h3>
      </div>
    </div>

    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-11">
         <p><%= simple_format(event.description) if event.description? %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-11">
      <% unless event.affiche.blank? %>
        <%= image_tag event.affiche_url, :class => 'affiche' %> <br>
      <% end %>
      </div>
    </div>

  <br>  
  <% end %>
</div>

