<%= form_for(@event) do |f| %>
  <div class="field"> 

    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-5">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>

      <div class="col-md-5">
        <%= f.label :date %><br>
        <%= f.date_select :date, :order => [:day, :month, :year] %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-5">
        <%= f.label :cahiercard %><br>
        <%= f.text_field :cahiercard %>
      </div>

      <div class="col-md-5">
        <%= f.label :price %><br>
        <%= f.text_field :price %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-11">
        <%= f.label :description %><br>
        <%= f.text_area :description, :class => 'wysihtml5' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-11">
        <%= f.label :affiche %><br>
        <%= f.file_field :affiche %>
      </div>
    </div>

  </div>
  <br>
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-11">
        <div class="actions"> 
          <%= f.submit 'Opslaan', :class => 'btn btn-default' %> 
          <%= link_to 'Terug', events_path, :class => 'btn btn-default' %>
        </div> 
      </div>
    </div>
  <% end %>